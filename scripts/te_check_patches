set -u

if command -v ol_check_patches >/dev/null 2>/dev/null; then
    OL_CHECK_PATCHES=ol_check_patches
else
    if [[ -z "${OL_QA_TOOLS:-}" ]]; then
        OL_QA_TOOLS="$(dirname "$0")/../../qa-tools"
    fi
    OL_CHECK_PATCHES="${OL_QA_TOOLS}/scripts/ol_check_patches"
    if [[ ! -x "${OL_CHECK_PATCHES}" ]]; then
        echo "ol_check_patches cannot be found" >&2
        exit 1
    fi
fi

echo "Warning: te_check_patches is deprecated, use ol_check_patches instead" >&2
exec "${OL_CHECK_PATCHES}" "$@"
