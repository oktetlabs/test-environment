set -u

if command -v ol_patch_add_trailer >/dev/null 2>/dev/null; then
    OL_PATCH_ADD_TRAILER=ol_patch_add_trailer
else
    if [[ -z "${OL_QA_TOOLS:-}" ]]; then
        OL_QA_TOOLS="$(dirname "$0")/../../qa-tools"
    fi
    OL_PATCH_ADD_TRAILER="${OL_QA_TOOLS}/scripts/ol_patch_add_trailer"
    if [[ ! -x "${OL_PATCH_ADD_TRAILER}" ]]; then
        echo "ol_patch_add_trailer cannot be found" >&2
        exit 1
    fi
fi

echo "Warning: te_patch_add_trailer is deprecated, use ol_patch_add_trailer instead" >&2
exec "${OL_PATCH_ADD_TRAILER}" "$@"
