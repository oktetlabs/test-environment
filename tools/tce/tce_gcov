cd `dirname $1`
case "$1" in
    *.gcda)   gcov=${NEWGCOV:-gcov-3.4} ;;
    *.da)     gcov=${OLDGCOV:-gcov} ;;
    *) echo "Strange data file $1" >&2; exit 1 ;;
esac
$gcov -c -b `basename $1` | 
awk '$1 ~ /[Cc]reating/ { sub(/['\''\.]$/, "", $2); sub(/^`/, "", $2); print ENVIRON["PWD"] "/" $2, "'$2'" }'
