SUBDIRS = .

AM_CPPFLAGS = @TE_CPPFLAGS@ -I$(top_srcdir) @EXTRA_CPPFLAGS@ \
              $(TE_CPPFLAGS_VAR)
AM_CFLAGS = @TE_CFLAGS@ $(TE_CFLAGS_VAR)

bin_PROGRAMS = rgt-log-split rgt-log-merge rgt-log-recover

RGT_LOG_ARCHIVE_COMMON_SRC = rgt_log_bundle_common.h
RGT_LOG_ARCHIVE_COMMON_LIB = $(DESTDIR)/$(prefix)/../$(TE_PLATFORM)/lib/liblogger_file.a \
                           $(DESTDIR)/$(prefix)/../$(TE_PLATFORM)/lib/libtools.a \
                           -lpopt

rgt_log_split_SOURCES = rgt_log_split.c $(RGT_LOG_ARCHIVE_COMMON_SRC)
rgt_log_split_LDADD = $(RGT_LOG_ARCHIVE_COMMON_LIB)

rgt_log_merge_SOURCES = rgt_log_merge.c $(RGT_LOG_ARCHIVE_COMMON_SRC)
rgt_log_merge_LDADD = $(RGT_LOG_ARCHIVE_COMMON_LIB)

rgt_log_recover_SOURCES = rgt_log_recover.c $(RGT_LOG_ARCHIVE_COMMON_SRC)
rgt_log_recover_LDADD = $(RGT_LOG_ARCHIVE_COMMON_LIB)

bin_SCRIPTS = rgt-log-bundle-create rgt-log-bundle-get-original \
              rgt-log-bundle-get-item te_pixz_wrapper

CLEANFILES = rgt-log-split rgt-log-merge rgt-log-recover \
             rgt-log-bundle-create rgt-log-bundle-get-original \
             rgt-log-bundle-get-item te_pixz_wrapper
