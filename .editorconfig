# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 4

[*.{c,h}]
indent_style = space
indent_size = 4
max_line_length = 78

[*.sh]
indent_style = space
indent_size = 4
max_line_length = 78

[*.xml]
indent_style = space
indent_size = 4

