PARSER="`dirname $0`/../share/te_builder/nut.m4"
cat "$PARSER" "$1" | m4 > "${TE_TMP}/nut.conf.processed"
. "${TE_TMP}/nut.conf.processed"

for nut in $NUTS ; do
    NUT_SOURCES="`eval echo '$NUT_'$nut'_SOURCES'`"
    if test -z "$NUT_SOURCES" ; then continue; fi
    find $NUT_SOURCES -name '*.da' -o -name '.*.da' -o -name '*.gcda' -o -name '.*.gcda' | xargs -n1 tce_gcov || exit 1
    find $NUT_SOURCES -name '*.gcov' -o -name '.*.gcov' | sort | xargs -n1 tce_report >${TE_LOG_DIR}/tce_log_$nut.tce || exit 1
    mkdir -p ${TE_LOG_DIR}/tce_log_${nut}_files
    tce_summary -vSORTMODE=coverage -vDATADIR=${TE_LOG_DIR}/tce_log_${nut}_files ${TE_LOG_DIR}/tce_log_$nut.tce > ${TE_LOG_DIR}/tce_log_$nut.html
done

