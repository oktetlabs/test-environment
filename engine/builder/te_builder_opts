if test -z $1 ; then
    exit 0 ;
fi    

while test -n "$1" ; do
    CFLAGS=
    case $1 in
        --log-* )
            OPT="${1#--log-}" ; CFLAGS=-DTE_LOG_LEVEL=0xFFFF ;;

        --nolog-* )
            OPT="${1#--nolog-}" ; CFLAGS=-UTE_LOG_LEVEL ;;
            
        --* )
            OPT="${1#--}" ;;
            
       *) 
           echo Invalid option --builder-$1 ; exit 1 ;;
    esac
        
    case $OPT in 
        include ) 
            cd ${TE_BUILD}/include ; 
            if test -n "$CFLAGS" ; then make clean ; fi
            make CFLAGS=$CFLAGS install || exit 1 
            ;;

        builder ) 
            cd ${TE_BUILD}/engine/builder 
            if test -n "$CFLAGS" ; then make clean ; fi
            make CFLAGS=$CFLAGS install || exit 1 
            ;;

        rcf ) 
            cd ${TE_BUILD}/engine/rcf ; 
            if test -n "$CFLAGS" ; then make clean ; fi
            make CFLAGS=$CFLAGS install || exit 1 
            ;;

        cs ) 
            cd ${TE_BUILD}/engine/configurator ; 
            if test -n "$CFLAGS" ; then make clean ; fi
            make CFLAGS=$CFLAGS install || exit 1 
            ;;

        tester ) 
            cd ${TE_BUILD}/engine/tester ; 
            if test -n "$CFLAGS" ; then make clean ; fi
            make CFLAGS=$CFLAGS install || exit 1 
            ;;

        logger ) 
            cd ${TE_BUILD}/engine/logger ; 
            if test -n "$CFLAGS" ; then make clean ; fi
            make CFLAGS=$CFLAGS install || exit 1 
            ;;

        lib-* )
            LIBNAME="${OPT#lib-}" ;
            cd ${TE_BUILD}/lib/${LIBNAME} ;  
            if test -n "$CFLAGS" ; then make clean ; fi
            make CFLAGS=$CFLAGS install || exit 1 
            ;;

        ta-* )
            TANAME="${OPT#ta-}" ;
            cd ${TE_BUILD}/agents/${TANAME} ; 
            if test -n "$CFLAGS" ; then make clean ; fi
            make CFLAGS=$CFLAGS install || exit 1 
            ;;
    esac
            
    shift 1
done    

exit 0
