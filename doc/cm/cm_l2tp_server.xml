    <!-- Root object for the L2TP server
         Name: empty -->
    <object oid="/agent/l2tp_server/" 
        access="read_write" type="none"/>

    <!-- Specify the range of ip addresses the LNS will 
         assign to the connecting LAC PPP tunnels. 
         Multiple ranges can be defined. 
         Name: any -->
    <object oid="/agent/l2tp_server/ip_range" 
        access="read_create" type="string"/>

    <!-- This identifier describes the local
         ip address of the L2TP server
         Name: empty -->
    <object oid="/agent/l2tp_server/local_ip" 
        access="read_write" type="integer"/>

    <!-- This identifier describes the connected
         clients
         Name: empty ip4 address from ip range -->
    <object oid="/agent/l2tp_server/connected" 
        access="read_only" type="integer"/>

    <!-- The L2TP packet payload.
         Name: empty -->
    <object oid="/agent/l2tp_server/length_bit" 
        access="read_write" type="integer"/>

    <!-- Require the remote peer to get authenticated  
         via CHAP for the ppp authentication..
         Name: empty -->
    <object oid="/agent/l2tp_server/require_chap" 
        access="read_write" type="integer"/>

    <!-- Refuse the remote peer to get authenticated  
         via PAP for the ppp authentication..
         Name: empty -->
    <object oid="/agent/l2tp_server/refuse_pap" 
        access="read_write" type="integer"/>    

    <!-- Require the remote peer to authenticate itself.
         Name: empty -->
    <object oid="/agent/l2tp_server/require_authentication" 
        access="read_write" type="integer"/>       

    <!-- Specify the path for a file which contains pppd 
         configuration parameters to be used
         Name: path file name with the length less or equal to 128 -->
    <object oid="/agent/l2tp_server/pppopt" 
        access="read_write" type="string"/>

    <!-- Specifying the MTU
         Name: empty -->
    <object oid="/agent/l2tp_server/pppopt/mtu" 
        access="read_write" type="integer"/>   

    <!-- Specifying the MRU
         Name: empty -->
    <object oid="/agent/l2tp_server/pppopt/mru" 
        access="read_write" type="integer"/> 

    <!-- pppd will presume 
         the peer to be dead if n LCP echo-requests are 
         sent without receiving a valid LCP echo-reply. 
         Name: empty -->
    <object oid="/agent/l2tp_server/pppopt/lcp-echo-failure" 
        access="read_write" type="integer"/> 

    <!-- pppd will send an LCP 
         echo-request frame to the peer every n seconds
         Name: empty -->
    <object oid="/agent/l2tp_server/pppopt/lcp-echo-interval" 
        access="read_write" type="integer"/>

    <!-- Addtitional options to pppd
         Name: as example: nodeflate, noproxyarp, lock.
               Other options can be found in man pppd -->
    <object oid="/agent/l2tp_server/pppopt/option" 
        access="read_create" type="string"/>

    <!-- User name CHAP
         Name: empty  -->         
    <object oid="/agent/l2tp_server/pppopt/chap_user" 
        access="read_write" type="string"/> 

    <!-- User password CHAP
         Name: empty -->         
    <object oid="/agent/l2tp_server/pppopt/chap_user/chap_passw" 
        access="read_write" type="string"/> 

</backup>