    <!-- Objects registered by Configurator itself -->
    
    <!-- XEN dom0. 
         Name: none -->
    <object oid="/agent/xen" access="none" type="none"/>

    <!-- XEN domU.

         When created, configuration file and disk image are cloned from the
	 common templates; IP address for the network interface used for
	 RCF/RPC communication is previously got by DHCP and updated in cloned
	 configuration file and disk image.
	 When deleted, cloned configuration file and disk image are deleted.

         Name: XEN domain name (used for cloned domU configuration file) -->
    <object oid="/agent/xen/dom_u" access="read_create" type="none"/>

    <!-- Status contolling and reflecting domU state.
         Name: none
	 Value: "non-running", "running" and "saved"; the transition from
	        "non-running" to "saved" status is NOT allowed -->
    <object oid="/agent/xen/dom_u/status" access="read_write" type="string"/>

    <!-- Migration of domU or transfer of domU image file; if domU is
         in 'running' state then live migration is performed, otherwise if
	 domU is in 'saved' state then domU image file transfer is performed.
         Name: none
         Value: IP address or dom0 host name to migrate/transfer to -->
    <object oid="/agent/xen/dom_u/migrate" access="read_write" type="string"
            volatile="true"/>

</backup>
