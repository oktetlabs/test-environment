    <!-- Objects registered by Configurator itself -->

    <!-- Command monitor object
         Name: a string unique for a given TA -->
    <object oid="/agent/command_monitor" access="read_create" type="none"/>

    <!-- Time to wait before running a shell command again
         Name: empty
         Value: time to wait, in milliseconds -->
    <object oid="/agent/command_monitor/time_to_wait" access="read_write" type="integer"/>

    <!-- Shell command to run
         Name: empty
         Value: shell command -->
    <object oid="/agent/command_monitor/command" access="read_write" type="string"/>

    <!-- Enable state for command monitor
         Name: empty
         Value: non-zero for enabled, 0 for disabled -->
    <object oid="/agent/command_monitor/enable" access="read_write" type="integer"/>

