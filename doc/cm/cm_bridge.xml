    <!-- Bridge instance.
         More providers may be supported in the future (e.g. OpenVSwitch).
         Name: interface name
         Value: provider (empty for default) -->
    <object oid="/agent/bridge" access="read_create" type="string">
      <depends oid="/agent/rsrc"/>
    </object>

    <!-- Bridge port.
         Name: port name (just internal)
         Value: interface OID -->
    <object oid="/agent/bridge/port" access="read_create" type="string"/>

</backup>
